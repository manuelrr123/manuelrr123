public class Factorialdeunnumero {

    public static void main(String[] args) {
        int num;
       int factorial;
        Scanner teclado = new Scanner(System.in);
        System.out.print("Ingrese un n√∫mero: ");
        num = teclado.nextInt();
        factorial = 1;
for (int i = 1; i <= num; i++) {
            factorial *= i;
        }
  System.out.println("La factorial de " + num + " es: " + factorial);
    }
}

        
